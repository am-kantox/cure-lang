%% Rebar3 configuration for Cure Programming Language
{erl_opts, [debug_info, warnings_as_errors, warn_export_vars, warn_unused_import, {i, "include"}, {i, "src/parser"}, {i, "src/fsm"}, {i, "src/types"}]}.

{src_dirs, ["src", "src/lexer", "src/parser", "src/types", "src/codegen", "src/fsm", "src/runtime"]}.

{deps, []}.

{project_plugins, [erlfmt]}.

{erlfmt, [
    write,
    {files, ["src/**/*.erl", "test/**/*.erl", "lsp/**/*.erl", "*.erl"]}
]}.

{profiles, [
    {test, [
        {erl_opts, [debug_info, export_all]}
    ]}
]}.

{shell, [
    {apps, []}
]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.