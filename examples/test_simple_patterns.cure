module TestSimplePatterns do
  export [test_match_empty/0, test_match_single/0, test_match_multiple/0]
  
  import Std.Vector [length/1, is_empty/1]
  
  def test_match_empty(): Int =
    let vec = []
    match vec do
      [] -> 0
      _ -> -1
    end
    
  def test_match_single(): Int =
    let vec = [42]
    match vec do
      [] -> -1
      [_] -> 1
      _ -> -2
    end
    
  def test_match_multiple(): Int =
    let vec = [10, 20, 30]
    match vec do
      [] -> -1
      [_] -> -2
      _ -> 3
    end
    
end