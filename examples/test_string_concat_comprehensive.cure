# Comprehensive test for <> operator
module TestStringConcatComprehensive do
  export [test/0]
  
  import Std.Io [println/1]
  
  def test(): Int =
    # Basic concatenation
    println("=== Basic Concatenation ===")
    println("Hello" <> " " <> "World")
    
    # Chain concatenation
    println("\n=== Chain Concatenation ===")
    let greeting = "Hello" in
    let punctuation = "!" in
    println(greeting <> ", " <> "Cure" <> punctuation)
    
    # Mixed with string literals
    println("\n=== Mixed Usage ===")
    let name = "Alice" in
    println("Welcome, " <> name <> "!")
    
    # Empty strings
    println("\n=== Empty Strings ===")
    println("" <> "Hello")
    println("World" <> "")
    
    0
end
