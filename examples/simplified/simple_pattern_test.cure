module SimplePatternTest do
  export [test_empty/0, test_single/0, test_head_tail/0]
  
  # Test empty list - should return 42
  def test_empty(): Int =
    match [] do
      [] -> 42
      _ -> 999
    end
    
  # Test single element list - should return 7
  def test_single(): Int =
    match [7] do
      [] -> 999
      [x | _] -> x
    end
    
  # Test head/tail extraction - should return the head (5)
  def test_head_tail(): Int =
    match [5, 10, 15] do
      [] -> 999  
      [h | t] -> h
    end
    
end