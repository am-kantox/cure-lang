# Test record pattern matching in match expressions
module TestRecordPattern do
  export [main/0]
  
  import Std.Io [println/1]
  
  record Person do
    name: String
    age: Int
  end
  
  def update_age(person: Person, new_age: Int): Person =
    Person{person | age: new_age}
  
  def get_name(person: Person): String =
    match person do
      Person{name: n, age: _} -> n
    end
  
  def main(): Unit =
    let bob = Person{name: "Bob", age: 25}
    let updated = update_age(bob, 26)
    let result_name = get_name(updated)
    println("Test completed!")
end
