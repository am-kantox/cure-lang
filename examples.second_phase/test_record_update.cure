# Simple test for record update syntax

module TestRecordUpdate do
  export [main/0]
  
  import Std.Io [println/1]
  
  record Person do
    name: String
    age: Int
  end
  
  def update_age(person: Person, new_age: Int): Person =
    Person{person | age: new_age}
  
  def main(): Unit =
    let alice = Person{name: "Alice", age: 30}
    let alice_updated = update_age(alice, 31)
    println("Test completed successfully!")
end
