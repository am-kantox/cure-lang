# Simple test for record update issue

module TestRecordSimple do
  export [main/0]
  
  import Std.Io [println/1]
  
  record Test do
    value: Bool
  end
  
  def set_false(t: Test): Test =
    Test{t | value: false}
  
  def main(): Unit =
    let t1 = Test{value: true}
    let t2 = set_false(t1)
    let result = match t2 do
      Test{value: v} -> v
    end
    println("Done")
end
